{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 120,
      "memory": 2048
    }
  },
  "routes": [
    {
      "src": "/api/admin/upload-new",
      "dest": "/api/admin/upload-new",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/api/rag/search",
      "dest": "/api/rag/search",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ]
}
