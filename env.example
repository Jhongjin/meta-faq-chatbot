# Supabase 설정
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google Gemini 설정
GEMINI_API_KEY=your_gemini_api_key
GOOGLE_API_KEY=your_google_api_key
GOOGLE_MODEL=gemini-2.0-flash-exp

# RAG 설정
EMBEDDING_DIM=768
TOP_K=5

# 파일 업로드 설정
MAX_FILE_SIZE=52428800
NEXT_PUBLIC_MAX_FILE_SIZE=52428800

# OpenAI 설정 (RAG 임베딩용)
OPENAI_API_KEY=your_openai_api_key

# 이메일 알림 설정
ALERT_FROM_EMAIL=noreply@nasmedia.co.kr
ALERT_TO_EMAIL=adso@nasmedia.co.kr
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# 크론 작업 설정 (Vercel Cron 또는 외부 서비스)
CRON_SECRET=your_cron_secret_key

# 이메일 서비스 설정 (하나만 설정하면 됩니다)
# 우선순위: SendGrid > Resend > EmailJS > Nodemailer > Console

# 1. SendGrid (추천 - 무료 100건/일)
# SENDGRID_API_KEY=your_sendgrid_api_key

# 2. Resend (추천 - 무료 3,000건/월)
# RESEND_API_KEY=your_resend_api_key

# 3. EmailJS (무료 200건/월)
# EMAILJS_SERVICE_ID=your_emailjs_service_id
# EMAILJS_TEMPLATE_ID=your_emailjs_template_id
# EMAILJS_USER_ID=your_emailjs_user_id

# 4. Nodemailer (SMTP 직접 연동)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# 5. Console (기본값 - 콘솔에만 출력)
# 아무것도 설정하지 않으면 콘솔에만 출력됩니다